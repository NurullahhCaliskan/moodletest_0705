<!-- Section Start -->
<div id="page_14_s1">
    <div class="section-padding">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-8 mb-md-80">
                    <!-- post details -->
                    <article class="post post_list style_2 post_details mb-0 wow fadeInDown">
                        <div class="post_img">
                            {{#page_14_s1_imgurl}}
                            <img src="{{page_14_s1_imgurl}}" alt="img" class="image-fit">
                            {{/page_14_s1_imgurl}}
                        </div>
                        <div class="post_caption">
                            <ul class="post_meta">
                                <li>
                                    <i class="fal fa-user"></i>
                                    {{page_14_s1_username}}
                                </li>
                                <li>
                                    <i class="fal fa-calendar-alt"></i>
                                    {{page_14_s1_lastmodified}}
                                </li>
                                <li>
                                    <i class="fal fa-comment-lines"></i>
                                    Comments ({{page_14_s1_commentscount}})
                                </li>
                            </ul>
                            <h4 class="post_title">
                                <a href="{{page_14_s1_post_detail_lnk}}">{{page_14_s1_subject}}</a>
                            </h4>
                            <div>
                               {{{page_14_s1_summary}}}
                            </div>
                            <blockquote>
                                <h4 class="quote_title">{{page_14_s1_quote_title}}</h4>
                                <cite class="quote_author">{{page_14_s1_quote_author}}</cite>
                            </blockquote>
                        </div>
                        <!-- Post Tags & Share Start -->
                        <div class="post_tags_share">
                            <div class="post_tags">
                                <div class="tags">
                                    {{{page_14_s1_tag}}}
                                </div>
                            </div>
                            <div class="post_share">
                                <ul class="social">
                                    {{#page_14_s1_social}}
                                    <li>
                                        <a href="{{social_lnk}}">
                                            <i class="{{social_icon}}"></i>
                                        </a>
                                    </li>
                                    {{/page_14_s1_social}}
                                </ul>
                            </div>
                        </div>
                        <!-- Post Tags & Share End -->
                        <!-- Post Author Start -->
                        <div class="post_author">
                            {{#page_14_s1_userimg}}
                            <img src="{{page_14_s1_userimg}}" alt="img" class="image-fit">
                            {{/page_14_s1_userimg}}
                            <div class="text">
                                <h5 class="mb-2">{{page_14_s1_username}}</h5>
                                <p class="mb-2">{{{page_14_s1_user_desc}}}</p>
                                <ul class="social">
                                    {{#page_14_s1_usersocial1}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial1link}}"><i class="{{page_14_s1_usersocial1}}"></i></a>
                                    </li>
                                    {{/page_14_s1_usersocial1}}
                                    {{#page_14_s1_usersocial2}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial2link}}"><i class="{{page_14_s1_usersocial2}}"></i></a>
                                    </li>
                                    {{/page_14_s1_usersocial2}}
                                    {{#page_14_s1_usersocial3}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial3link}}"><i class="{{page_14_s1_usersocial3}}"></i></a>
                                    </li>
                                    {{/page_14_s1_usersocial3}}
                                    {{#page_14_s1_usersocial4}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial4link}}"><i class="{{page_14_s1_usersocial4}}"></i></a>
                                    </li>
                                    {{/page_14_s1_usersocial4}}
                                    {{#page_14_s1_usersocial5}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial5link}}"><i class="{{page_14_s1_usersocial5}}"></i></a>
                                    </li>
                                    {{/page_14_s1_usersocial5}}
                                    {{#page_14_s1_usersocial6}}
                                    <li>
                                        <a href="{{page_14_s1_usersocial6link}}"><i class="{{page_14_s1_usersocial6}}"></i></a>
                                    </li>    
                                    {{/page_14_s1_usersocial6}}
                                </ul>
                            </div>
                        </div>
                        <!-- Post Author End -->
                    </article>
                    <!-- Post Comments Start -->
                    <h4>People Comments</h4>
                    <ul class="comments mb-xl-30">
                        {{#page_14_s1_comment}}
                        <li class="comment">
                            <div class="comment_img">
                                <img src="{{userimg}}" alt="img" class="image-fit userpicture">
                            </div>
                            <div class="comment_text">
                                <h6 class="mb-0">{{username}}</h6>
                                <p class="comment_date">{{timecreated}}</p>
                                <p class="mb-0">{{content}} </p>
                            </div>
                        </li>
                        {{/page_14_s1_comment}}
                    </ul>
                    <!-- Post Comments End -->
                    <!-- Comment Form Start -->
                    <div class="comment_form">
                        <h4>{{page_14_s1_form_header}}</h4>
                        <form action="{{page_14_s1_form_button_lnk}}" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="name" placeholder="{{page_14_s1_form_text_1}}" class="form-control form-control-custom style_2" autocomplete="off">
                                        <i class="fal fa-user"></i>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" name="email" placeholder="{{page_14_s1_form_text_2}}" class="form-control form-control-custom style_2" autocomplete="off">
                                        <i class="fal fa-envelope"></i>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea rows="5" name="message" placeholder="{{page_14_s1_form_text_3}}" class="form-control form-control-custom style_2" autocomplete="off"></textarea>
                                        <i class="fal fa-pen"></i>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" name="submit" class="thm-btn bg-thm-color-three thm-color-three-shadow btn-rectangle">{{page_14_s1_form_button}} 
                                        <i class="fal fa-chevron-right ml-2"></i>
                                    </button>
                                </div>
                            </div>
                            <input type="hidden" name="f-name" value="BLOG COMMENT FORM">
                            <input type="hidden" name="sesskey" value="{{sesskey}}">
                        </form>
                    </div>
                    <!-- Comment Form End -->
                    <!-- post details -->
                </div>
                <div class="col-lg-4">
                    <div class="sidebar style_2">
                        <div class="sidebar_widget wow fadeInUp">
                            <form action="search">
                                <div class="input-group search_widget">
                                    <input type="text" name="q" placeholder="Search" class="form-control" autocomplete="off">
                                    <div class="input-group-append ml-0">
                                        <button type="submit" class="thm-btn bg-thm-color-two thm-color-white thm-color-two-shadow btn-rectangle btn-small">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="sidebar_widget recent_widgets wow fadeInUp">
                            <h5 class="widget_title">{{page_14_page_sidebar_header_1}}</h5>
                            <ul>
                                {{#h2_09_block}}
                                <li>
                                    <div class="image">
                                        {{#imgurl}}
                                            <img src="{{imgurl}}" alt="img" class="image-fit">
                                        {{/imgurl}}
                                    </div>
                                    <div class="text">
                                        <h6 class="mb-0">
                                            <a href="{{post_detail_lnk}}">{{subject}}</a>
                                        </h6>
                                        <p class="mb-0"><strong><i class="fal fa-calendar-alt"></i> </strong>
                                            <a href="{{post_detail_lnk}}">{{created}}</a>
                                        </p>
                                    </div>
                                </li>
                                {{/h2_09_block}}
                            </ul>
                        </div>
                        <div class="sidebar_widget wow fadeInUp">
                            <a href="{{page_14_page_sidebar_adimg_lnk}}" class="d-block">
                                <img src="{{frontpageimglink}}blog/adv.jpg" alt="adv" class="image-fit">
                            </a>
                        </div>
                        <div class="sidebar_widget wow fadeInUp">
                            <h5 class="widget_title">{{page_14_page_sidebar_header_2}}</h5>
                            <div class="tags">
                                {{#page_14_s1}}
                                    <a href="{{tagurl}}">{{{tags}}}</a>
                                {{/page_14_s1}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Section End -->
{{/page_14_s1_enabled}}
<!-- Blog details End -->


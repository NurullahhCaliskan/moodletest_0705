{{!
    Home 4 block0_01.
}}

<!-- Block 01 -->
<section id="h4_01_block" class="section-padding bg-thm-color-two-light">
    <div class="container pt-5">
        <div class="row">
            <!-- Block -->
            {{#h4_01_block}}
            <div class="col-lg-4 col-md-6">
                <div class="event_block wow fadeInDown" data-wow-delay=".{{counter}}ms">
                    <div class="event_img relative text-center">
                        <a href="{{urllink}}">
                            {{#image}}
                            <img src="{{image}}" alt="img" class="image-fit" 
                                style="height: {{h4_01_block_imgheight}}">
                            {{/image}}
                        </a>    
                    </div>
                    <div class="event_caption">
                        <div class="event_text">
                            <h5 class="event_title">
                                <a href="{{urllink}}">{{{headline}}}</a>
                            </h5>
                        </div>
                        <p>{{#shortentext}} 125, {{caption}} {{/shortentext}}</p>
                        <div class="event_btn">
                            <a href="{{urllink}}" class="thm-btn bg-thm-color-two-light thm-color-two 
                                    btn-rectangle btn-small">
                                <i class="fal fa-chevron-right font-weight-bold"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/h4_01_block}}
            <!-- Block -->
        </div>
    </div>
</section>

    <section id="h1_block06" class="section-padding isotope-filter-items">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title wow fadeInDown">
                        <p class="subtitle">
                            <i class="fal fa-book"></i>
                            {{h1_06_block_headline}}
                        </p>
                        <h3 class="title">{{h1_06_block_header}}</h3>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="filter-btns mb-5">
                        <ul>
                            <li class="active filter-trigger" data-filter="*">
                                <a href="#">All</a>
                            </li>
                            {{#h1_06_block_ctg}}
                            <li class="filter-trigger" data-filter=".{{category}}">
                                <a href="#">{{category}}</a>
                            </li>
                            {{/h1_06_block_ctg}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row filteritems">
                <!-- Box Start -->
                {{#h1_06_block}}
                <div class="col-lg-4 col-md-6 masonry-item {{category}}">
                    <div class="video_box wow fadeInDown" data-wow-delay=".{{counter}}s">
                        <img src="{{frontpageimglink}}video/{{counter}}.jpg" alt="img" class="image-fit">
                        <div class="video_badges">
                        {{#badge}}
                            <span class="tag_badge bg-thm-color-four">{{badge}}</span>
                        {{/badge}}
                        </div>
                        <a href="{{linkurl}}" class="popup-youtube video_btn">
                            <i class="fas fa-play"></i>
                        </a>
                        <div class="video_text">
                            <h6 class="text-white mb-0">{{firsttitle}}</h6>
                            <p class="mb-0 thm-color-light">{{secondtitle}}</p>
                        </div>
                    </div>
                </div>
                {{/h1_06_block}}
            </div>
            <div class="row filteritems">
                <!-- Box Start -->
                {{#h1_06_block_}}

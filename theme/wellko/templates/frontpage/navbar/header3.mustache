<header class="header header-3">
    {{#h3_01_block_enabled}}
    <div class="topbar bg-thm-color-two">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="left-side">
                        <p>{{h3_01_block_title}}</p>
                        <div class="countdown-timer" data-countdown="{{h3_01_block_countdown}}">00 : 00 : 00 : 00</div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <ul class="right-side">
                        <li>
                            <a href="{{h3_01_block_phone_link}}">
                                <i class='fal fa-calendar'></i>
                                {{h3_01_block_phone}}
                            </a>
                        </li>
                        <li>
                            <a href="mailto:{{h3_01_block_email}}">
                                <i class='fal fa-envelope'></i>
                                {{h3_01_block_email}}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{/h3_01_block_enabled}}
    <div class="nav_sec">
        <div class="container">
            <!-- inner -->
            <div class="nav_warp">
                <nav>
                    <!-- logo start -->
                    <div class="logo">
                        <a href="{{{ config.homeurl }}}">
                            {{# output.should_display_navbar_logo }}
                                <img src="{{output.get_compact_logo_url}}" class="image-fit" alt="{{sitename}}">
                            {{/ output.should_display_navbar_logo }}
                            {{^ output.should_display_navbar_logo }}
                                {{{ sitename }}}
                            {{/ output.should_display_navbar_logo }}
                        </a>
                    </div>
                    <!-- logo end -->
                    <!-- Navigation Start -->
                    <ul class="main-menu">
                        {{{frontpagenavlink}}}
                        <li class="menu-item search_trigger">
                            <a href="#">
                                <i class="fas fa-search "></i>
                            </a>
                        </li>
                        <script>
                            setTimeout(() => {
                                let currentLang = document.querySelector('html').lang;
                                if(currentLang != 'en' && currentLang != 'tr') {
                                    currentLang = 'en';
                                }
                                let selectableLang = currentLang == 'en' ? 'tr' : 'en';
                                document.querySelector('#language-selector-link').href = '?lang='+selectableLang;
                                document.querySelector('#language-selector-link').innerHTML = '<b style="color:black;">' + selectableLang + '</b>';
                            }, 0);
                        </script>
                        <li class="menu-item search_trigger" style="margin-right:-10px;">
                            <a id="language-selector-link" href="?lang=en">
                                
                            </a>
                        </li>
                    </ul>
                    <!-- Navigation Ens -->
                    <!-- Head Actions -->
                    <div class="head_actions">
                        {{#userlogin}}
                            {{#usermenu}}
                            <div class="d-none d-sm-block pr-2">
                                {{> core/user_menu }}
                            </div>    
                            {{/usermenu}}
                        {{/userlogin}}   
                        {{^userlogin}}
                            <div class="d-none d-md-block mr-2">
                                <a class="thm-btn d-flex align-items-center text-white bg-thm-color-two p-3 thm-color-three-shadow btn-rectangle" 
                                    href="login/index.php" title="{{#str}} login, core {{/str}}">
                                        <i class="far fa-sign-in-alt"></i>
                                </a>
                            </div>
                            <div class="d-block d-md-none bg-thm-color-three p-3 rounded-circle">
                                <a class="d-flex align-items-center text-white" href="login/index.php" title="{{#str}} login, core {{/str}}">
                                    <i class="far fa-sign-in-alt"></i>
                                </a>
                            </div>
                        {{/userlogin}}
                        <a href="mod/scheduler/view.php?id=9" class="thm-btn bg-thm-color-three thm-color-three-shadow btn-rectangle">
                            {{#str}} h2_05_block_btnb_default,theme_wellko{{/str}}
                            <i class="fal fa-chevron-right ml-2"></i>
                        </a>
                        <button type="button" class="head_trigger mobile_trigger" title="Mobile">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                    <!-- Head Actions -->
                </nav>
            </div>
            <!-- inner -->
        </div>
    </div>
    <!-- Search Start -->
    <div class="search-form-wrapper">
        <div class="close-search-trigger close_trigger">
            <span></span>
            <span></span>
        </div>
        <form class="search-form" action="search" >
            <input type="text" name="q" placeholder="{{#str}} search, moodle {{/str}}.." value="" required="">
            <button type="submit" class="search-btn">
                <i class="fal fa-search m-0"></i>
            </button>
        </form>
    </div>
    <!-- Search End -->
</header>

<script>
    setTimeout(() => {
        let lang = document.querySelector('html').lang;
        
        if(lang != 'en' && lang != 'tr') {
            lang = 'en';
        }

        
        document.querySelectorAll('.multilang[lang='+lang+']').forEach((e) => {
            e.style.display = "inline-block";
        })
    }, 0);
</script>